{
  "compilerOptions": {
    "declaration": true,

    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "src",

    "sourceMap": true,

    "lib": ["es2021"],
    "module": "node18",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
